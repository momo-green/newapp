<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
   
    <com.example.newapp.view.NoSrocllViewPager
        android:id="@+id/content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RadioGroup 
        android:id="@+id/bar_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg" 
        android:orientation="horizontal"
        >
        
        <RadioButton 
            android:id="@+id/home_rb"
            style="@style/btn_bar"
            android:drawableTop="@drawable/bar_click_drawable"
            android:text="首页"
           
            />
        <RadioButton 
            android:id="@+id/new_rb"
            style="@style/btn_bar"
             android:drawableTop="@drawable/bar_click_new"
            android:text="新闻中心"
            />
        <RadioButton 
            android:id="@+id/smart_rb" 
            style="@style/btn_bar"
            android:drawableTop="@drawable/bar_click_smart"
            android:text="智慧服务"
            />
        <RadioButton 
            android:id="@+id/gov_rb"
            style="@style/btn_bar"
            android:drawableTop="@drawable/bar_click_gov"
            android:text="政务"
            />
        <RadioButton 
            android:id="@+id/setting_rb"
            style="@style/btn_bar"
            android:drawableTop="@drawable/bar_click_setting"
            android:text="设置"
            />
    </RadioGroup>
    
    
</LinearLayout>
